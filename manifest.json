* { box-sizing: border-box; }

body {
  margin: 0;
  font-family: system-ui;
  background: radial-gradient(circle at top, #111, #000);
  color: white;
  overflow: hidden;
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

/* LOADER */
#loader {
  position: fixed;
  inset: 0;
  background: black;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.loader-text {
  color: gold;
  margin-top: 15px;
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0%,100% { opacity: 0.4 }
  50% { opacity: 1 }
}

/* COUNTDOWN */
#countdownScreen {
  height: 100vh;
  padding: 20px;
  display: none;
}

.title {
  text-align: center;
  color: gold;
  font-size: 1.6rem;
  margin-top: 4vh;
}

.timer {
  margin-top: 6vh;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 4vw;
}

.box {
  background: rgba(255,255,255,0.06);
  backdrop-filter: blur(6px);
  border-radius: 5vw;
  padding: 4.5vw 3vw;
  min-height: 24vw;
  text-align: center;
  box-shadow: 0 0 6vw rgba(212,175,55,0.15);
  animation: float 3s ease-in-out infinite;
}

.box:active {
  transform: scale(0.96);
}

@keyframes float {
  0%,100% { transform: translateY(0) }
  50% { transform: translateY(-6px) }
}

.value {
  font-size: 9vw;
  color: gold;
  line-height: 1;
}

.label {
  font-size: 2.6vw;
  letter-spacing: 0.2vw;
  color: silver;
}

.emoji {
  font-size: 4.2vw;
}

/* REVEAL */
#revealScreen {
  position: fixed;
  inset: 0;
  background: radial-gradient(circle, #111, #000);
  display: none;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 30px;
}

.blast {
  animation: blast 1.2s ease forwards;
}

@keyframes blast {
  from { transform: scale(0.8); opacity: 0 }
  to { transform: scale(1); opacity: 1 }
}

.msg {
  font-size: 1.6rem;
  color: gold;
  opacity: 0;
  animation: fadeUp 1s forwards;
}

.msg:nth-child(1){ animation-delay: 0.3s }
.msg:nth-child(2){ animation-delay: 1.1s }
.msg:nth-child(3){ animation-delay: 1.9s }

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(20px) }
  to { opacity: 1; transform: translateY(0) }
}
